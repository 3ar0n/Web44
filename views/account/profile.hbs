{{#section 'title'}}Hồ sơ cá nhân{{/section}}

{{#section 'css_js'}}
<link rel="stylesheet" type="text/css" href="/assets/css/profile.css"/>
<script type="text/javascript" src="/assets/js/profile.js"></script>
{{/section}}
<form action="" method="post">
    <div class="title">HỒ SƠ CÁ NHÂN</div>
    <span class="line"></span>
    <div class="inputs">
        <input type="text" class="input" placeholder="Email" id="email_us" required="true" name="email" readonly/>
        <input type="password" class="input" placeholder="Mật khẩu cũ" id="pass_us" required="true" name="password" readonly/>  
        <input type="password" class="input" placeholder="Mật khẩu mới" id="pass_new_us" required="true" name="password_new"/>
        <input type="password" class="input" placeholder="Nhập lại mật khẩu mới" id="conf_pass_new_us" required="true" name="password_new"/>
        <input type="text" class="input" placeholder="Họ tên" id="name_us" required="true" name="fullName"/>
        <input type="text" class="input" placeholder="Số điện thoại" id="phone_number_us" required="true" name="phone"/>                    
        <input type="text" class="input" placeholder="Địa chỉ" id="address_us" required="true" name="address"/> 
    </div>
    <div class="button">
        <button type="submit" class="buttonEdit" onclick="buttonEdit()">CẬP NHẬT THÔNG TIN</button>
    </div>
    <div class="title">LỊCH SỬ MUA HÀNG</div>
    <span class="line"></span>
    <table>
        <tr>
            <th>Mã đơn hàng</th>
            <th>Ngày mua</th> 
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Chi tiết</th>
        </tr>
        <tr>
            <td>Jill</td>
            <td>Smith</td>
            <td>Tom</td>
            <td>Done</td>
            <td>
                <a href="#" class="button_table">Chi tiết</a>
            </td>
        </tr>
        <tr>
            <td>Hello</td>
            <td>ABC</td>
            <td>Rouns</td>
            <td>Done</td>
            <td>
                <a href="#" class="button_table">Chi tiết</a>
            </td>
        </tr>
    </table>
    <div class="title"></div>
    <span class="line"></span>
</form>
