{{#section 'title'}}
    SignUp
{{/section}}

{{#section 'css_js'}}
<link rel="stylesheet" type="text/css" href="/assets/css/signup.css"/>
<script type="text/javascript" src="/assets/js/signup.js"></script>
{{/section}}

<body>
    <div class="bigBackground"></div>
    <div class="formSignUp">
        <div class="background__formSignUp">
            <form action="">
                <div class="title__form">ĐĂNG KÍ</div>
                <span class="line__form"></span>
                <div class="inputs__form">
                    <input type="text" class="input__form" placeholder="Email" id="email_us" required="true"/>
                    <input type="password" class="input__form" placeholder="Mật khẩu" id="pass_us" required="true"/>  
                    <input type="password" class="input__form" placeholder="Nhập lại mật khẩu" id="conf_pass_us" required="true"/>
                    <input type="text" class="input__form" placeholder="Họ tên" id="name_us" required="true"/>
                    <input type="text" class="input__form" placeholder="Số điện thoại" id="phone_number_us" required="true"/>                    
                    <input type="text" class="input__form" placeholder="Địa chỉ" id="address_us" required="true"/>                    
                    <div class="recapcha__form" ></div>
                    <input type="text" class="input__form" placeholder="Recapcha" id="recapcha_us" required="true"/>   
                    <div class="termsAndCons__form">
                        <p>
                            <input type="checkbox" id="termsAndCons" /> 
                            <label for="termsAndCons">Tôi đồng ý với điều khoản sử dụng.</label>
                        </p>
                    </div>
                </div>
                <div class="button__form">
                    <button class="buttonSign__form" onclick="buttonSign()">ĐĂNG KÍ</button>
                </div>
            </form>
        </div>
    </div>
    <script type="text/javascript" src="js/index.js"></script>
</body>