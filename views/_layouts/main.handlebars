<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>{{{_sections.title}}}</title>
	{{{_sections.css_js}}}
	<link rel="stylesheet" type="text/css" href="/assets/css/navigationBar.css">
	<script type="text/javascript" src="/assets/js/navigationBar.js"></script> 
	<link rel="icon" href="/img/homepage-logo.png">
</head>

<body style="background-color: white">
	<div class="navigation-bar" id="navBar" style="z-index: 1;">
		<form id="frmLogout" method="post" action="/account/logout"></form>
		{{#if layoutVM.curUser.isAdmin}}
		<a href="#" onclick="log_out()">📤 Đăng xuất</a>
		{{else}}
		<form class="search-bar">
			<input type=text name="search" placeholder="Tìm kiếm...">
		</form>
		{{!-- <a href="javascript:void(0);" class="dropdown-icon" onclick="dropdownNav()">&#9776;</a> --}}
		<a href="/cart">🛒 Giỏ hàng</a>
		{{#if layoutVM.isLogged}}
		<div class="user dropdown">
			<button class="userButton button" onclick="userFunction()">
				👤 {{layoutVM.username}}▾
			</button>
			<div class="dropdown-content" id="userDropdown">
				<a href="/account">Thông tin cá nhân</a>
				<a href="#" onclick="log_out()">Đăng xuất</a>
			</div>
		</div>
		{{else}}
		<a href="/account/signup">📋 Đăng ký</a>
		<a href="/account/signin">📥 Đăng nhập</a>
		{{/if}}
		<div class="brand dropdown">
			<button class="brandButton button" onclick="brandFunction()">
				🔖 Thương hiệu▾
			</button>
			<div class="dropdown-content" id="brandDropdown">
				{{#each layoutVM.brand}}
				<a href="/view?cat=-1&brand={{brandID}}">{{brandName}}</a>
				{{/each}}
			</div>
		</div> 
		<div class="type dropdown">
			<button class="typeButton button" onclick="typeFunction()">
				📱 Loại▾
			</button>
			<div class="dropdown-content" id="typeDropdown">
				{{#each layoutVM.cat}}
				<a href="/view?cat={{catID}}&brand=-1">{{catName}}</a>
				{{/each}}
			</div>
		</div>
		<a id="homepage" href="/">🏠 Trang chủ</a>
		{{/if}}
	</div>
	<div style="margin-top: 46px;">
		{{{body}}}
	</div>
	
	<script>
		function log_out() {
			document.getElementById("frmLogout").submit();
		};
	</script>
</body>

</html>